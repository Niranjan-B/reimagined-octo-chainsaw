<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coreCardViewLayout"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/coreCardViewRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/nameOfDonorPlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="Name of Donor :"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameOfDonor"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_alignBaseline="@+id/nameOfDonorPlaceHolder"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/nameOfDonorPlaceHolder"
            android:layout_toEndOf="@+id/nameOfDonorPlaceHolder"
            android:textSize="20sp"
            tools:text="Niranjan Bhaskar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E - mail :"
            android:id="@+id/emailIdPlaceHolder"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:layout_below="@+id/nameOfDonorPlaceHolder"
            android:layout_alignLeft="@+id/nameOfDonorPlaceHolder"
            android:layout_alignStart="@+id/nameOfDonorPlaceHolder" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailId"
            android:layout_toRightOf="@+id/emailIdPlaceHolder"
            android:layout_toEndOf="@+id/emailIdPlaceHolder"
            android:layout_alignBaseline="@+id/emailIdPlaceHolder"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            tools:text="nero.niranjan@gmail.com"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>